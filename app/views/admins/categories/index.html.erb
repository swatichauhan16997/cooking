<div class="right_col" role="main">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Categories</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Settings 1</a>
              </li>
              <li><a href="#">Settings 2</a>
              </li>
            </ul>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <p class="text-muted font-13 m-b-30">
          Show, Add , Remove and Edit the Category
        </p>
        <%= link_to 'Add', new_admins_sub_category_path, class: 'btn btn-success pull-right'%>
        <table id="datatable-buttons" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Category Name</th>
              <th colspan = '3'>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each_with_index do |category, index|%>
              <tr>
                <td><%= category.name %></td>
                <td><%= link_to 'Show', admins_category_path(category) %></td>
                <td><%= link_to 'Edit', edit_admins_category_path(category) %></td>
                <td><%= link_to 'Delete', admins_category_path(category), method: :delete, data:{ confirm: 'Are You Sure You Want to Delete'} %></td>


              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>