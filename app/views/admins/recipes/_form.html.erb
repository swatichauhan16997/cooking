<div class="right_col" role="main">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
          <% if @recipe.new_record? %>
            <% url = admins_recipes_path %>
            <h2>Add Recipe</h2>
          <% else %>
            <% url = admins_recipe_path %>
            <h2>Edit Recipe</h2>
          <% end %>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Settings 1</a>
              </li>
              <li><a href="#">Settings 2</a>
              </li>
            </ul>
          </li>
          <li><a class="close-link"><i class="fa fa-close"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br />
        <%= form_for @recipe, url: url, html: {class: 'form-horizontal form-label-left' } do |f| %>
          <%= render 'shared/error_messages', target: @recipe%>
          <div class="form-group">
            <%= f.label :recipe, class: 'control-label col-md-3 col-sm-3 col-xs-12'  %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= f.text_field :name, class: 'form-control col-md-7 col-xs-12'%>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :description, class: 'control-label col-md-3 col-sm-3 col-xs-12'  %>
            <div class="col-md-8 col-sm-6 col-xs-12">
              <%= f.cktext_area :description,rows: 10, class: 'form-control col-md-7 col-xs-12'%>
            </div>
          </div>

          <div class="ln_solid"></div>
          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <%= f.submit class: 'btn btn-success', value: 'Submit'%>
              <%= button_tag "Reset", type: :reset , class: 'btn btn-primary'%>
              <%= link_to 'Cancel', :back, class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  </div>